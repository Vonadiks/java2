<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <TextArea fx:id="textArea" GridPane.columnIndex="0" GridPane.rowIndex="0" prefWidth="250"/>
    <HBox GridPane.columnIndex="0" GridPane.rowIndex="1">
    <TextField fx:id="textField" GridPane.columnIndex="0" GridPane.rowIndex="1" prefWidth="250"/>
    <Button fx:id="sendButton" onAction="#onClickBtnSend" text="Отправить" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="100"/>
    </HBox>


</GridPane>